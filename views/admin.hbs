<div class="row bg-warning mt-5 mb-5">
    <div class="col-xs-12 col-md-3">
        <h5 class="text-center"> Order Form</h5>

        <form action="/orders" method="POST">

            <label for="name">ProductId</label>
            <input type="text" name="_id" id="id" class="form-control">
            <label for="price">quantity</label>
            <input type="text" name="quantity" id="quantity" class="form-control">

            <button type="submit" class="btn btn-primary mt-3 mb-5">Place Order</button>


        </form>
    </div>


    <div class="col-xs-12 col-md-9 mb-5">
        <h5 class="text-center"> Order List</h5>
        <table border="1" class="table table-responsive-sm table-striped bg-warning">

            <thead>
                <tr>
                    <td> OrderId</td>
                    <td> quantity</td>

                    <td class=" d-none d-md-block"> Product</td>
                    <td> Action</td>
                </tr>
            </thead>
            <tbody>
                {{# each order}}
                <tr>
                    <td> {{_id}}</td>
                    <td> {{quantity}}</td>

                    <td class=" d-none d-md-block"> {{product}}

                    </td>
                    <td> <a href="/orders/{{_id}}" class="btn btn-primary">edit</a>
                        <a href="/orders/delete/{{_id}}" class="btn btn-danger">delete</a>
                    </td>

                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>




